	"settings": [
		{
			"id": "showLogo",
			"title": "Logo Only",
			"if": {
				"privacy": false
			},
			"icon": "fa-solid fa-block-question",
			"value": false
		},
		{
			"id": "privacy",
			"title": "Privacy Mode",
			"if": {
				"showLogo": false
			},
			"icon": "fas fa-user-secret",
			"value": false
		},
		{
			"id": "showBook",
			"if": {
				"privacy": false,
				"showLogo": false,
				"showReading": true
			},
			"title": "Show Current Book",
			"icon": "fas fa-book",
			"value": true
		},
		{
			"id": "showCover",
			"if": {
				"privacy": false,
				"showLogo": false,
				"showBook": true,
				"showReading": true
			},
			"title": "Show Book Cover",
			"icon": "fas fa-images",
			"value": true

		},
		{
			"id": "showReading",
			"if": {
				"showLogo": false
			},
			"title": "Show Browsing/Reading Status",
			"icon": "fas fa-book-reader",
			"value": true
		},
		{
			"id": "showTimestamp",
			"title": "Show Timestamps",
			"icon": "fas fa-clock",
			"value": true
		},
		{
			"id": "showButtons",
			"if": {
				"privacy": false,
				"showLogo": false
			},
			"title": "Show Buttons",
			"icon": "fas fa-compress-arrows-alt",
			"value": true
		}
	]
