{
	"$schema": "https://schemas.premid.app/metadata/1.10",
	"author": {
		"name": "Kyrie",
		"id": "368399721494216706"
	},
	"service": "Nimo",
	"altnames": [
		"Nimo TV",
		"nimo.tv"
	],
	"description": {
		"en": "Nimo TV is a leading game live streaming platform around the world. Watch the hottest PC games live stream, mobile games live stream, and esports live now."
	},
	"url": [
		"www.nimo.tv",
		"dashboard.nimo.tv"
	],
	"version": "1.0.14",
	"logo": "https://cdn.rcd.gg/PreMiD/websites/N/Nimo/assets/logo.png",
	"thumbnail": "https://cdn.rcd.gg/PreMiD/websites/N/Nimo/assets/thumbnail.jpeg",
	"color": "#622DF7",
	"category": "videos",
	"tags": [
		"video",
		"streaming",
		"entertainment"
	],
	"settings": [
		{
			"id": "lang",
			"multiLanguage": true
		},
		{
			"id": "privacy",
			"title": "Privacy Mode",
			"icon": "fad fa-user-secret",
			"value": false
		},
		{
			"id": "streamDetail",
			"if": {
				"privacy": false
			},
			"title": "Stream Details row1",
			"icon": "fas fa-comment-alt-edit",
			"value": "%title%",
			"placeholder": "Use %title% or %streamer% or %game%"
		},
		{
			"id": "streamState",
			"if": {
				"privacy": false
			},
			"title": "Stream Details row2",
			"icon": "fas fa-comment-alt-edit",
			"value": "%streamer%",
			"placeholder": "Use %title% or %streamer% or %game%"
		},
		{
			"id": "vidDetail",
			"if": {
				"privacy": false
			},
			"title": "Video Details row1",
			"icon": "fas fa-comment-alt-edit",
			"value": "%title%",
			"placeholder": "Use %title% or %uploader%"
		},
		{
			"id": "vidState",
			"if": {
				"privacy": false
			},
			"title": "Video Details row2",
			"icon": "fas fa-comment-alt-edit",
			"value": "%uploader%",
			"placeholder": "Use %title% or %uploader%"
		},
		{
			"id": "timestamp",
			"title": "Show Timestamps",
			"icon": "fad fa-stopwatch",
			"value": true
		},
		{
			"id": "profilePic",
			"title": "Show Streamer's Picture",
			"icon": "fad fa-images",
			"value": false
		},
		{
			"id": "buttons",
			"if": {
				"privacy": false
			},
			"title": "Show Buttons",
			"icon": "fas fa-compress-arrows-alt",
			"value": true
		}
	]
}